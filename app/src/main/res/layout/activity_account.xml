<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="puzzle.zoomoneyapptest.AccountActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_pink"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요"
        android:textSize="@dimen/textsize_xxxxl"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_marginLeft="@dimen/margin_l"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_xxxs"
        android:layout_marginLeft="@dimen/margin_l"
        >

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:textColor="@color/pink1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="님,"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_marginLeft="4dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저금 하시네요."
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_xxxxl"
        android:layout_marginLeft="@dimen/margin_l"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="적립 금액"
            android:textSize="20dp"
            />


    </LinearLayout>


    <Button
        android:id="@+id/btn_check_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textSize="19dp"
        android:layout_gravity="center"
        />


</LinearLayout>
